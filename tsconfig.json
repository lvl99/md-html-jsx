{
  "include": ["./index.ts", "lib/*", "__tests__/index.test.tsx"],
  "exclude": ["**/*.test.tsx", "__tests__/**/*"],
  "compilerOptions": {
    "target": "es6",
    "jsx": "preserve",
    "module": "es2015",
    "moduleResolution": "bundler",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
